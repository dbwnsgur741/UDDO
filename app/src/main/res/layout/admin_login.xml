<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:fontFamily="@font/seoulhangangcb"
        android:layout_marginTop="119dp"
        android:layout_gravity="center"
        android:id="@+id/make_nick_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#000000"
        android:lineSpacingExtra="17sp"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints"
        android:text="관리자 암호를 \n입력해주세요."/>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/admin_login_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력해주세요." />

    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.AppCompatButton
        android:background="@drawable/box_rectangle_stroke_light"
        android:textSize="15sp"
        android:text="로그인 하기"
        android:id="@+id/admin_login_btn"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />


</LinearLayout>