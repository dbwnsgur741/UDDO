<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">

    <TextView
        android:layout_marginLeft="10dp"
        android:id="@+id/quiz_num"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textSize="25dp"
        android:text="Qusetion1."
        android:layout_weight="2"
        android:gravity="center"/>

    <TextView
        android:id="@+id/quiz_desc"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center">

        <ImageButton
            android:id="@+id/correct_box"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/title_box_round"
            android:backgroundTint="@color/main"
            android:src="@drawable/anwser_correct"/>

        <ImageButton
            android:id="@+id/false_box"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/title_box_round"
            android:backgroundTint="@color/main"
            android:src="@drawable/answer_false_150dp"/>

    </LinearLayout>

</LinearLayout>