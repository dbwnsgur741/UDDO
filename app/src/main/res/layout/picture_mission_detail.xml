<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/picture_mission_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/picture_mission_detail_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="배경이 적당한 장소에서 팀원이 모두 나오게 개성있는 단체사진을 촬영하시오."
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/picture_mission_detail_toolbar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />

    <ImageView
        android:id="@+id/picture_mission_detail_ImageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_sort_black_24dp"
        app:layout_constraintTop_toBottomOf="@id/picture_mission_detail_TextView"
        app:srcCompat="@drawable/img30"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/picture_mission_detail_btn"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/box_rectangle_stroke"
        android:text="사진찍기"
        android:textSize="24dp"
        app:layout_constraintTop_toBottomOf="@+id/picture_mission_detail_ImageView"
        tools:ignore="MissingConstraints"/>

</android.support.constraint.ConstraintLayout>