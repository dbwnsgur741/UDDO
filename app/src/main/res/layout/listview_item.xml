<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center"
        android:id="@+id/listview_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="23dp"
        android:visibility="gone">

        <ImageView
            android:background="@drawable/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/listview_title_text"
            android:layout_marginLeft="26dp"
            android:layout_marginRight="26dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#000000"
            android:fontFamily="@font/seoulhangangcb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="퀴즈 미션" />

        <ImageView
            android:background="@drawable/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:orientation="vertical"
    android:background="@drawable/box_rectangle_stroke">

    <ImageView
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16.5dp"
        android:layout_marginBottom="35.5dp"
        android:id="@+id/imageView2"
        android:layout_width="16dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/shield" />

    <TextView
        android:layout_marginTop="21dp"
        android:layout_marginBottom="37dp"
        android:textAlignment="center"
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#000000"
        android:fontFamily="@font/seoulhangangcb"
        android:textSize="15sp" />

    <TextView
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="15dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/seoulhangangcb"
        android:text="New Text"
        android:textAlignment="center"
        android:textColor="#8c8c8c"
        android:textSize="12sp" />

</RelativeLayout>
</LinearLayout>