<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/default_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:elevation="5dp"
        android:id="@+id/always_quiz_false_toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="#000000">
        <TextView
            android:id="@+id/always_quiz_false_toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/seoulhangangcb"
            android:textSize="18sp"
            android:text="결과 확인"/>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/toolbar_false_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/toolbar_dropshadow" />

    <TextView
        android:id="@+id/always_quiz_false_answer_text"
        android:fontFamily="@font/seoulhangangcb"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="105dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정답이 드러갈 자리입니다."/>

    <TextView
        android:fontFamily="@font/seoulhangangcb"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="69dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=' 틀렸어요 ㅠ_ㅠ '/>

    <TextView
        android:fontFamily="@font/seoulhangangceb"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 다음 문제까지 남은시간 "/>

    <TextView
        android:id="@+id/false_timer_view"
        android:fontFamily="@font/seoulhangangceb"
        android:textSize="15sp"
        android:textColor="#000000"
        android:text="00:00"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/false_GoMain"
        android:layout_marginTop="75dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_main_btn_3"/>

    <ImageView
        android:id="@+id/false_WaitQuiz"
        android:layout_marginTop="21dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_main_btn_2"/>

</LinearLayout>