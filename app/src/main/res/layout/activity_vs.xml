<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/default_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:elevation="5dp"
        android:id="@+id/msq_default_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="#000000">

        <TextView
            android:textAlignment="center"
            android:id="@+id/msq_default_toolbar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/seoulhangangcb"
            android:textSize="18sp"
            android:text="Toolbar"/>
    </android.support.v7.widget.Toolbar>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/toolbar_dropshadow" />

    <TextView
        android:gravity="center"
        android:fontFamily="@font/seoulhangangcb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:lineSpacingExtra="15dp"
        android:text="진정한 의병이 되기 위한\n
여러분의 훈련 성과를 확인할 때입니다.\n
지도의 (A) 위치로 가면\n
다른 팀들이 기다리고 있습니다.\n
조교의 지령에 따라.\n
다른 팀과 대결해 보세요.\n
\n\n
" />

    <ImageButton
        android:layout_marginTop="68dp"
        android:id="@+id/msq_default_btn"
        android:layout_width="324dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:background="@drawable/map_btn" />

    <TextView
        android:id="@+id/vs_mission_warning"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_toRightOf="@+id/timer_textview"
        android:fontFamily="@font/seoulhangangcb"
        android:text="뒤로가기가 안 되니 신중히 버튼을 눌러주시기 바랍니다"
        android:textSize="14sp"
        android:textColor="#ff0000" />

    <LinearLayout
        android:id="@+id/point_layout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/point_30"
            android:background="@drawable/box_rectangle_stroke_light"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="30Point"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/seoulhangangcb"
            android:layout_weight="3"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/point_50"
            android:background="@drawable/box_rectangle_stroke_light"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="50Point"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/seoulhangangcb"
            android:layout_weight="3"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/point_100"
            android:background="@drawable/box_rectangle_stroke_light"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="100Point"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/seoulhangangcb"
            android:layout_weight="3"/>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/point_150"
            android:background="@drawable/box_rectangle_stroke_light"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="150Point"
            android:textAlignment="center"
            android:textSize="14sp"
            android:fontFamily="@font/seoulhangangcb"
            android:layout_weight="3"/>
    </LinearLayout>

    <TextView
        android:id="@+id/train_mission_complete_mission_TextView"
        android:layout_marginTop="68dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#ff0000"
        android:fontFamily="@font/seoulhangangcb"
        android:text="이미 완료한 임무입니다."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>