<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/my_point"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="right"
    android:layout_width="200dp"
    android:layout_height="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="0dp">
        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/rank"
            android:visibility="invisible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="19dp" />
        <TextView
            android:text="34/100"
            android:id="@+id/my_star_text"
            android:layout_marginLeft="8dp"
            android:layout_width="38dp"
            android:layout_height="15dp"            android:visibility="invisible"

            android:fontFamily="@font/seoulhangangcb"
            android:textColor="#000000"
            android:textSize="12dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="319dp"
            tools:layout_editor_absoluteY="19dp" />
        <ImageView
            android:layout_width="31dp"
            android:layout_height="26dp"
            android:src="@drawable/point"
            app:layout_constraintStart_toEndOf="@+id/my_point"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="19dp" />
        <TextView
            android:id="@+id/my_point_text"
            android:layout_width="31dp"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/seoulhangangcb"
            android:textColor="#000000"
            android:textSize="12dp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="319dp"
            tools:layout_editor_absoluteY="19dp"
            android:text="300P"/>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>