<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <TextView
        android:fontFamily="@font/seoulhangangcb"
        android:layout_marginTop="119dp"
        android:layout_gravity="center"
        android:id="@+id/make_nick_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#000000"
        android:lineSpacingExtra="17sp"
        android:gravity="center_horizontal"
        tools:text="당신의 닉네임을\n입력해주세요."
        tools:ignore="MissingConstraints" />

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/nick_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="닉네임을 입력해주세요." />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/start_button"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_main_btn"/>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#8c8c8c"
            android:gravity="center_horizontal"
            android:text="닉네임을 입력하고 싶지 않다면?"/>

        <TextView
            android:id="@+id/make_nick_NoName"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:gravity="center_horizontal"
            android:text="Noname으로 참가하기"/>

    </LinearLayout>

</LinearLayout>